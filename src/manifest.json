{
  "manifest_version": 2,
  "name": "deTwitter",
  "description": "Redirects Twitter requests to Nitter, the privacy friendly alternative.",
  "version": "1.0.0",
  "homepage_url": "http://github.com/elderengineer/detwitter",
  "default_locale": "en",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://twitter.com/*",
    "*://www.twitter.com/*",
    "*://mobile.twitter.com/*",
    "*://pbs.twimg.com/*",
    "*://video.twimg.com/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icons/64.png"
    }
  },
  "options_page": "options.html"
}
